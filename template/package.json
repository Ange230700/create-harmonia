{
  "name": "harmonia",
  "version": "0.0.1",
  "private": true,
  "description": "It is just a template for my projects.",
  "homepage": "https://github.com/WildCodeSchool/harmonia#readme",
  "bugs": {
    "url": "https://github.com/WildCodeSchool/harmonia/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WildCodeSchool/harmonia.git"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "install": "husky install || true",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server",
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm:dev:*\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "lint": "lint-staged",
    "prebuild": "npm install",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "cross-env-shell \"rm -rf ./client/node_modules ./server/node_modules ./node_modules ./package-lock.json\"",
    "prettier": "npm run prettier --workspaces --if-present",
    "linters": "npm run lint --workspaces --if-present",
    "start": "npm run prebuild && npm run prettier && npm run linters && npm run build && npm run test && npm run dev",
    "commit": "git add . && git commit -m \"Sprint 00: {{sprint title}} â€” Task 00: {{task title}}\""
  },
  "keywords": [],
  "author": "WildCodeSchool",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.2",
    "validate-branch-name": "^1.3.0"
  }
}